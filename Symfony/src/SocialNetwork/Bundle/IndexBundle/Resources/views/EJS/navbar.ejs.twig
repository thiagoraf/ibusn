    <a data-toggle="dropdown" href="#" class="dropdown-toggle">
        <img class="nav-user-photo" src="<%= API.dataUrl %>bundles/socialnetworkindex/users/<%= API.me.data.id %>/albums/Fotos de perfil/<%= API.me.data.photoProfile %>" alt="Jason's Photo" />
